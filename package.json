{
  "name": "@uni-ku/root",
  "type": "module",
  "version": "0.0.1",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "release": "npm run build && bumpp",
    "example:dev:h5": "npm -C examples run dev",
    "example:build:h5": "npm -C examples run build",
    "example:dev:mp-weixin": "npm -C examples run dev:mp-weixin",
    "example:build:mp-weixin": "npm -C examples run build:mp-weixin",
    "prepare": "simple-git-hooks",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "@vue/compiler-sfc": "^3.4.31",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.22.2",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "bumpp": "^9.4.1",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.1",
    "eslint": "^9.3.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vite": "^5.3.3",
    "vitest": "^2.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "npx commitlint --edit ${1}"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint . --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
